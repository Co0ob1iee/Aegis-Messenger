<Window
    x:Class="Aegis.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Aegis.Desktop.Models"
    mc:Ignorable="d"
    Title="Aegis Messenger"
    Width="1200"
    Height="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar - Conversations List -->
        <Grid Grid.Column="0" Background="{ThemeResource SurfaceBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Padding="16">
                <TextBlock Text="Aegis Messenger"
                          FontSize="24"
                          FontWeight="Bold"/>
                <TextBlock Text="End-to-End Encrypted"
                          Foreground="Gray"
                          FontSize="12"/>
            </StackPanel>

            <!-- Conversations -->
            <ListView Grid.Row="1"
                     ItemsSource="{x:Bind ViewModel.Conversations}"
                     SelectedItem="{x:Bind ViewModel.SelectedConversation, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Column="0"
                                    Width="48"
                                    Height="48"
                                    Fill="{ThemeResource AccentBrush}"/>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="{Binding DisplayName}"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding LastMessage}"
                                          Foreground="Gray"
                                          TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <Border Grid.Row="0"
                   Background="{ThemeResource PrimaryBrush}"
                   Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="{x:Bind ViewModel.SelectedConversation.DisplayName, Mode=OneWay}"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <!-- Disappearing Messages Button -->
                        <Button x:Name="DisappearingMessagesButton"
                               Click="DisappearingMessagesButton_Click"
                               Background="Transparent"
                               BorderThickness="0"
                               ToolTipService.ToolTip="Disappearing Messages">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE916;" Foreground="White" FontSize="16"/>
                                <TextBlock Text="{x:Bind ViewModel.SelectedConversation.DefaultDisappearAfterSeconds, Mode=OneWay, Converter={StaticResource TimerDisplayConverter}}"
                                          Foreground="White"
                                          FontSize="12"/>
                            </StackPanel>
                        </Button>

                        <!-- Privacy Settings Button -->
                        <Button x:Name="PrivacySettingsButton"
                               Click="PrivacySettingsButton_Click"
                               Background="Transparent"
                               BorderThickness="0"
                               ToolTipService.ToolTip="Privacy Settings">
                            <FontIcon Glyph="&#xE72E;" Foreground="White" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Messages -->
            <ListView Grid.Row="1"
                     ItemsSource="{x:Bind ChatViewModel.Messages}"
                     Padding="16">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Message">
                        <Grid Margin="0,8,0,8">
                            <Border Background="{ThemeResource SurfaceBrush}"
                                   CornerRadius="8"
                                   Padding="12"
                                   HorizontalAlignment="Left"
                                   MaxWidth="600">
                                <StackPanel Spacing="4">
                                    <!-- Message Content -->
                                    <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap"/>

                                    <!-- Message Footer with Timestamp and Timer -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                  Text="{x:Bind Timestamp}"
                                                  FontSize="10"
                                                  Foreground="Gray"/>

                                        <!-- Disappearing Timer Icon -->
                                        <StackPanel Grid.Column="1"
                                                   Orientation="Horizontal"
                                                   Spacing="4"
                                                   Visibility="{x:Bind DisappearAfterSeconds, Converter={StaticResource NullToVisibilityConverter}}">
                                            <FontIcon Glyph="&#xE916;"
                                                     FontSize="10"
                                                     Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                            <TextBlock Text="{x:Bind DisappearAfterSeconds, Converter={StaticResource SecondsToTimeConverter}}"
                                                      FontSize="10"
                                                      Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Message Input -->
            <Grid Grid.Row="2" Padding="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                        Text="{x:Bind ChatViewModel.MessageText, Mode=TwoWay}"
                        PlaceholderText="Type a message..."
                        Margin="0,0,8,0"/>

                <Button Grid.Column="1"
                       Content="Send"
                       Command="{x:Bind ChatViewModel.SendMessageCommand}"
                       Style="{ThemeResource AccentButtonStyle}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
